<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinqSample001.LinqSamplePage008">
    <ContentPage.Content>
        <StackLayout>
               
                <Entry x:Name="insert"
                Placeholder="1はインサート、0は何もしない"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

                <Button Text="インサート"
                Clicked="Button_Insert"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

                <Button Text="セレクト"
                Clicked="Button_Select"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

                

               

                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>